{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "*":["node_modules/*", "target/ypes/*"]
    },
    "types": ["mocha", "chai", "dotenv"],
    "typeRoots": ["./node_modules/@types"],
    "lib": ["es2015"],
    "module": "esnext",
    "target": "es2020",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["client/**/*.ts", "client1/**/*.ts", "tests/**/*.ts"]
}
